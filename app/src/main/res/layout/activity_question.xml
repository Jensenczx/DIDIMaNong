<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenjensen.testapp.QuestionActivity">
    <TextView
            android:id="@+id/q_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#8CC152"
            android:text="发布问题"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_below="@id/q_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/question_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述"/>
        <EditText
            android:id="@+id/question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/question_content_label"
            android:minLines="6"/>
        <TextView
            android:id="@+id/jiangli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖励"
            android:layout_below="@id/question_content"
            />
        <EditText
            android:id="@+id/jl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/jiangli"
            />
        <Button
            android:layout_below="@id/jl_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="发布"
            android:textColor="@color/white"
            android:background="#8CC152"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</RelativeLayout>
